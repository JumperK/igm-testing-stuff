Includes
    // BUILDING INCLUDES
    *include personMain %id %name %desc %flavor %priceMain %priceBonus %condMain %condBonus %effMain %effBonus %tag
        *person[%id]
            name:[%name]
            desc:[%desc]<//></></>+[%effMain] CpS</>+[%effBonus] GpS<//></></>[%flavor]
            cost:[%priceMain] tokens
            req:[%condMain] tokens and (this<1)
            on tick:
                yield [%effMain] tokens
                yield [%effBonus] gems
            end
            on earn:yield 1 personHire
            on lose:lose 1 personHire
            tags:person [%tag]

    *include personBonus %id %name %desc %flavor %priceMain %priceBonus %condMain %condBonus %effMain %effBonus %tag
        *person[%id]
            name:[%name]
            desc:[%desc]<//></></>+[%effMain] CpS</>+[%effBonus] GpS<//></></>[%flavor]
            cost:[%priceBonus] gems
            req:[%condBonus] gems and (this<1)
            on tick:
                yield [%effMain] tokens
                yield [%effBonus] gems
            end
            on earn:yield 1 personHire
            on lose:lose 1 personHire
            tags:person [%tag]

    *include personBoth %id %name %desc %flavor %priceMain %priceBonus %condMain %condBonus %effMain %effBonus %tag
        *person[%id]
            name:[%name]
            desc:[%desc]<//></></>+[%effMain] CpS</>+[%effBonus] GpS<//></></>[%flavor]
            cost:[%priceMain] tokens, [%priceBonus] gems
            req:[%condMain] tokens, [%condBonus] gems and (this<1)
            on tick:
                yield [%effMain] tokens
                yield [%effBonus] gems
            end
            on earn:yield 1 personHire
            on lose:lose 1 personHire
            tags:person [%tag]

    *include buildingBoth %id %name %desc %flavor %priceMain %priceBonus %condMain %condBonus %effMain %effBonus %tag
        *building[%id]
            name:[%name]
            desc:[%desc]<//></></>+[%effMain] CpS</>+[%effBonus] GpS<//></></>[%flavor]
            cost:[%priceMain] tokens, [%priceBonus] gems
            req:[%condMain] tokens, [%condBonus] gems and (this<1)
            on tick:
                yield [%effMain] tokens
                yield [%effBonus] gems
            end
            on earn:yield 1 buildBuilt
            on lose:lose 1 buildBuilt
            tags:building [%tag]

